/* -------------------------------------- */
/* BASIC SETUP */
/* -------------------------------------- */

* {
  padding: 0;
  margin: 0;
  box-sizing: border-box;
}

html {
  background-color: #fff;
  color: #555;
  font-family: 'Raleway', sans-serif;
  font-weight: 300;
  font-size: 20px;
  text-rendering: optimizeLegibility;
}


/* -------------------------------------- */
/* REUSABLE COMPONENTS */
/* -------------------------------------- */

.row {
  max-width: 1140px;
  margin: 0 auto;
}

h1 {
  font-size: 250%;
  margin: 0;
  color: #fff;
}

h2 {
  font-size: 180%;
  color: #663399;
  text-align: center;
}

h2:after {
  display: block;
  height: 2px;
  background-color: #663399;
  content: " ";
  width: 100px;
  margin: 0 auto;
  margin-top: 30px;
  margin-bottom: 60px;
}

h3 {
  font-size: 140%;
  text-transform: uppercase;
  margin-bottom: 20px;
}

p {
  line-height: 145%;
}

.p-center {
  width: 60%;
  margin-left: 20%;
}

section {
  padding: 80px;
}

.purple {
  color: #663399;
  font-weight: 400;
}

.clearfix:after {
  content: "";
  display: table;
  clear: both;
}

/* -------------------------------------- */
/* HEADER */
/* -------------------------------------- */

header {
  background-image: linear-gradient(rgba(0,0,0,0.5), rgba(0,0,0,0.5)), url("<%= asset_path("oregon1.jpg") %>");
  background-size: cover;
  background-position: center;
  background-attachment: fixed;
  position: relative;
  height: 100vh;
}

header p {
  color: #dedede;
}

.jumbo-text {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
}


/* -------------------------------------- */
/* ABOUT */
/* -------------------------------------- */

.about-info {
  width: 70%;
  margin-left: 15%;
  margin-bottom: 20px;
}

.about-info div {
  display: inline-block;
  text-align: center;
  float: left;
  width: 50px;
  margin-right: 30px;
}

.about-info p {
  overflow: hidden;
}

.about-info i {
  font-size: 200%;
  color: #663399;
}

/* -------------------------------------- */
/* SKILLS */
/* -------------------------------------- */

.section-photos {
  margin: 0;
  padding: 0;
}

.photo-list {
  list-style: none;
}

.photo-list li {
  display: block;
  float: left;
  width: 20%;
}

.photo {
  width: 100%;
  margin: 0;
  padding: 0;
  overflow: hidden;
  background-color: #000;
}

.photo img {
  width: 100%;
  height: auto;
  opacity: 0.6;
  transform: scale(1.15);
  -webkit-filter: grayscale(100%); /* Safari 6.0 - 9.0 */
  filter: grayscale(100%);
  transition: opacity 0.8s, transform 0.8s, filter 0.8s;
}

.photo img:hover {
  opacity: 1;
  transform: scale(1.05);
  -webkit-filter: none; /* Safari 6.0 - 9.0 */
  filter: none;
}



/* -------------------------------------- */
/* SKILLS */
/* -------------------------------------- */

.skills h3 {
  text-align: center;
}

.skills-info {
  padding-left: 25%;
  transition: all 0.8s ease;
}

.skills-info div {
  display: inline-block;
  text-align: center;
  float: left;
  margin-right: 15px;
}

.skills-info i {
  font-size: 120%;
  font-weight: 400;
}

.skills-info.hidden {
  opacity: 0;
}

.ion-ios-bolt-outline {
  color: #663399;
}

/* -------------------------------------- */
/* CONTACT */
/* -------------------------------------- */

.section-contact {
  background-color: #e8e8e8;
}

.right {
  text-align: right;
  color: #663399;
  font-size: 150%;
}

.left {
  text-align: left;
  padding-left: 10%;
}

.social-icons {
  list-style: none;
  text-align: center;
  margin-top: 20px;
}

.social-icons li {
  display: inline-block;
  margin-right: 20px;
}

.social-icons li:last-child {
  margin-right: 0;
}

.ion-social-facebook,
.ion-social-twitter,
.ion-social-instagram,
.ion-social-linkedin,
.ion-social-github {
  color: #555;
  font-size: 150%;
  transition: color 0.5s;
}

.ion-social-facebook:hover {
  color: #3b5998;
  cursor: pointer;
}

.ion-social-twitter:hover {
  color: #55acee;
  cursor: pointer;
}

.ion-social-instagram:hover {
  color: #125688;
  cursor: pointer;
}

.ion-social-linkedin:hover {
  color: #007bb5;
  cursor: pointer;
}

.ion-social-github:hover {
  color: #000;
  cursor: pointer;
}
